{% from '_layouts/macros/lib.twig' import img %}
{% from '_layouts/macros/lib.twig' import imgCopyright %}

<div class="flex flex-col-reverse lg:flex-row">
    <div class="lg:w-1/2 flex items-center px-8 lg:pl-8">
        <div class="py-16">
            {% if topHtml %}
                {{ topHtml|raw }}
            {% endif %}

            {% if teaser is defined and teaser %}
                <div class="mb-4 text-primary dark:text-primary-dark text-lg">
                    {{ teaser }}
                </div>
            {% endif %}

            <h1 class="text-3xl font-headings font-semibold tracking-wider text-3xl md:text-5xl lg:text-7xl">

                <span class="block text-primary dark:text-primary-dark">{{ title }}</span>

            </h1>

            {% if text %}
                <div class="prose mt-6 lg:text-xl tracking-wider text-primary dark:text-primary-dark sm:max-w-3xl">
                    {{ text|md|purify }}
                </div>
            {% endif %}

            {% if url and caption %}
                <div class="mt-16">
                    {% include '_layouts/partials/button.twig' with {
                        caption: caption,
                        href: url,
                        color: 'primary'
                    } only %}
                </div>
            {% endif %}

            {% if bottomHtml %}
                {{ bottomHtml|raw }}
            {% endif %}
        </div>
    </div>

    {% if image %}

       <div class="lg:w-1/2 mb-8 lg:mb-0 lg:ml-8">
           {{ img(image,  {
               transform: {width: 1024, height: 400},
               scrset: [768, 360],
               showCopyright: false,
               attr: {
                   class: 'lg:object-cover lg:object-top w-full h-full lg:rounded-bl-xl',
                   loading: null,
                   fetchpriority: 'high'
               }
           }) }}
       </div>

    {% endif %}
</div>
{% from '_layouts/macros/lib.twig' import img %}
{% from '_layouts/macros/lib.twig' import imgCopyright %}


<div class="relative ">

    <div class="max-w-full">
        <div class="relative sm:overflow-hidden">

            <div class="absolute inset-0">
                {{ img(image, {
                    transform: config.heroTransform[config.heroWidth],
                    attr: {
                        class: 'hidden sm:block h-full w-full object-cover',
                        loading: null,
                        fetchpriority: 'high'
                    }
                }) }}
            </div>


            <div class="mb-16 w-full md:w-3/4 lg:w-1/2 md:-skew-x-12 md:-ml-12 md:pl-8 bg-gradient-to-r from-primary to-secondary text-white opacity-95 md:rounded-br-3xl flex justify-center items-center">
                <div class="md:skew-x-12 py-8 2xl:py-16 pl-12 pr-16">

                    {% if teaser is defined and teaser %}
                        <div class="mb-2">
                            {{ teaser }}
                        </div>
                    {% endif %}

                    <h1 class="text-4xl xl:text-5xl 2xl:text-6xl font-light tracking-wide">
                        {{ title }}
                    </h1>

                    <p class="mt-4 text-lg tracking-wider text-white sm:max-w-3xl">
                        {{ tagline }}
                    </p>

                    {% if url and caption %}
                        <div class="mt-8">
                            {% include '_layouts/partials/button.twig' with {
                                caption: caption,
                                href: url,
                                color: 'white'
                            } only %}
                        </div>
                    {% endif %}

                </div>
            </div>

        </div>
    </div>

</div>

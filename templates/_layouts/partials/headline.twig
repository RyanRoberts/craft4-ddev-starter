{# Renders Headline #}

{# @param text String The headline #}
{# @param tag String optional html tag #}
{# @param href String optional link target #}

{% set tag = tag ?? 'h2' %}
{% set href = href ?? null %}
{% set extraClasses = extraClasses ?? '' %}

{% if href %}
    {% set tag = 'a' %}
{% endif %}


{# This should match a h2 tag in tailwind typography: prose prose-lg #}
{{ tag(tag, {
    text: text,
    class: "text-4xl/9 font-headings font-bold text-headings dark:text-headings-dark #{extraClasses}",
    href: href
}) }}

{# @param style String determines classes to be applied default=nav #}
{# @param caption String comment #}

{# https://alpinejs.dev/component/dropdown #}

{% set style = style ?? 'nav' %}
{% set caption = caption ?? 'Toggle'|t %}

{% from '_layouts/macros/lib.twig' import navLinkClasses %}

{% set classes = {
    nav: {
        button: navLinkClasses(active),
        icon: 'inline ml-1.5 w-4 h-4 text-foreground-dark transition',
        panel: 'left-auto mt-2 px-4 py-2 min-w-[150px] max-w-xl bg-primary text-white rounded shadow-2xl'
    }
} %}

<div x-data="{
        open: false,
        toggle() {
            if (this.open) {
                return this.close()
            }

            this.open = true
        },
        close(focusAfter) {
            this.open = false

            focusAfter && focusAfter.focus()
        }
    }"
     x-on:keydown.escape.prevent.stop="close($refs.button)"
     x-on:focusin.window="! $refs.panel.contains($event.target) && close()"
     @keydown.down.prevent="$focus.next()"
     @keydown.up.prevent="$focus.previous()"
     x-id="['dropdown-button']"
     class="relative">

    <!-- Button -->
    <button class="block"
            x-ref="button"
            x-on:click="toggle()"
            :aria-expanded="open"
            :aria-controls="$id('dropdown-button')"
            type="button">

        {% block button %}
            <div class="flex items-center justify-between">
                {% block buttonText %}
                    <div class="{{ classes[style]['button'] }}">
                        {{ caption }}
                    </div>
                {% endblock %}
                <svg fill="currentColor" viewBox="0 0 20 20"
                     aria-hidden="true"
                     :class="open ? 'rotate-180' : 'rotate-0'"
                     class="{{ classes[style]['icon'] }}">
                    <path fill-rule="evenodd"
                          d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z"
                          clip-rule="evenodd"></path>
                </svg>
            </div>
        {% endblock %}

    </button>

    <!-- Panel -->
    <div class="z-50 absolute {{ classes[style]['panel'] }}"
         x-ref="panel"
         x-show="open"
         x-cloak
         x-on:click.outside.prevent.stop="close($refs.button)"
         :id="$id('dropdown-button')">

        {% block panel %}{% endblock %}

    </div>
</div>

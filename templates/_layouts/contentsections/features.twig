<div class="py-24 sm:py-32">
    <div class="mx-auto max-w-7xl px-6 lg:px-8">
        <div class="mx-auto max-w-2xl lg:text-center">
            {% if entry.teaser %}
                <h2 class="text-lg font-semibold leading-8 tracking-tight text-gray-600 dark:text-gray-200">{{ entry.teaser }}</h2>
            {% endif %}
            <p class="mt-2 text-3xl font-bold tracking-tight text-primary dark:primary-dard sm:text-4xl">{{ entry.title }}</p>
            
            {% if entry.body %}
                <div class="mt-6 text-lg leading-8 text-gray-600 dark:text-gray-200">{{ entry.body|md|purify }}</div>
            {% endif %}
            
        </div>
        <div class="mx-auto mt-16 max-w-2xl sm:mt-20 lg:mt-24 lg:max-w-4xl">
            <dl class="grid max-w-xl grid-cols-1 gap-y-10 gap-x-8 lg:max-w-none lg:grid-cols-2 lg:gap-y-16">
                {% for block in entry.features.with('feature:icon').collect %}
                    <div class="relative pl-16">
                        <dt class="text-base font-semibold leading-7 text-gray-900 dark:text-gray-100">
                            <div class="absolute top-0 left-0 flex h-10 w-10 items-center justify-center rounded-lg bg-gray-600">
                                {% set icon = block.icon.one %}

                                {% if icon %}
                                    {{ svg(icon)|attr({class: 'h6 w-6 text-white'}) }}
                                {% endif %}
                                {#<!-- Heroicon name: outline/cloud-arrow-up -->
                                <svg class="h-6 w-6 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 16.5V9.75m0 0l3 3m-3-3l-3 3M6.75 19.5a4.5 4.5 0 01-1.41-8.775 5.25 5.25 0 0110.233-2.33 3 3 0 013.758 3.848A3.752 3.752 0 0118 19.5H6.75z" />
                                </svg>#}
                            </div>
                            {{ block.heading }}
                        </dt>
                        <dd class="mt-2 text-base leading-7 text-gray-600 dark:text-gray-200">
                            {{ block.text|md|purify }}
                        </dd>
                    </div>
                {% endfor %}
            </dl>
        </div>
    </div>
</div>

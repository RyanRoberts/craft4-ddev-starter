{% set style = '' %}
{% if entry.textColor and entry.backgroundColor %}
    {% set style = "color: #{entry.textColor}; background-color: #{entry.backgroundColor}" %}
{% endif %}

<div class="-mb-16 pb-16" style="{{ style }}">
    {% set blocks = entry.storyContent.collect %}

    {% for block in blocks %}
        {% include "_sections/news_story/blocks/#{block.type.handle}.twig" with {
            entry,
            blocks,
            block
        } only %}
    {% endfor %}

    {% set members = entry.storyTeam.all %}
    {% set images = request.get('images') %}

    {% if members or images %}
        <div class="bg-gray-200 text-foreground py-8">
            {% include '_sections/news_story/includes/team.twig' with {members} %}

            {% include '_sections/news_story/includes/copyright.twig' with {images} %}
        </div>
    {% endif %}


</div>